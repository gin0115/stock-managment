{
    "name": "pinkcrab\/stock-management",
    "type": "library",
    "description": "Plugin for making stock management much easier",
    "keywords": [],
    "homepage": "https:\/\/github.com\/gin0115\/stock-management",
    "license": "MIT",
    "authors": [
        {
            "name": "Glynn Quelch",
            "email": "glynn.quelch@gmail.com",
            "homepage": "https:\/\/github.com\/gin0115"
        }
    ],
    "autoload": {
        "psr-4": {
            "PinkCrab\\Stock_Management\\": "..\/src"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "PinkCrab\\Stock_Management\\Tests\\": "..\/tests"
        }
    },
    "require-dev": {
        "phpunit\/phpunit": "^7.0 || ^8.0",
        "phpstan\/phpstan": "^1.0",
        "szepeviktor\/phpstan-wordpress": "^1.0",
        "php-stubs\/wordpress-stubs": "^6.0 || ^5.9",
        "roots\/wordpress": "^6.0",
        "wp-phpunit\/wp-phpunit": "^6.0",
        "dealerdirect\/phpcodesniffer-composer-installer": "*",
        "wp-coding-standards\/wpcs": "*",
        "object-calisthenics\/phpcs-calisthenics-rules": "*",
        "yoast\/phpunit-polyfills": "^0.2.0 || ^1.0.0",
        "symfony\/var-dumper": "*",
        "gin0115\/wpunit-helpers": "~1.0.0",
        "jetbrains\/phpstorm-stubs": "dev-master",
        "humbug\/php-scoper": "*",
        "bamarni\/composer-bin-plugin": "^1.4",
        "kimhf\/woocommerce-stubs": "^0.2.0",
        "kimhf\/advanced-custom-fields-pro-stubs": "^5.9",
        "pxlrbt\/php-scoper-prefix-remover": "*"
    },
    "require": {
        "php": ">=7.1.0",
        "pinkcrab\/perique-framework-core": "^1",
        "pinkcrab\/bladeone-provider": "^1.2",
        "pinkcrab\/registerables": "^0.8",
        "pinkcrab\/wp-rest-schema": "0.0.1-beta3",
        "pinkcrab\/perique-route": "^0.1",
        "pinkcrab\/perique-plugin-lifecycle": "^0.2",
        "pinkcrab\/perique-admin-menu": "^0.2.0"
    },
    "scripts": {
        "test": ".\/vendor\/bin\/phpunit --coverage-clover clover.xml --testdox --colors=always",
        "coverage": ".\/vendor\/bin\/phpunit --coverage-html coverage-report --testdox --colors=always",
        "analyse": ".\/vendor\/bin\/phpstan analyse src -l8",
        "sniff": ".\/vendor\/bin\/phpcs src\/ -v",
        "all": "composer test && composer analyse && composer sniff",
        "build": "bash build.sh",
        "build-dev": "bash build.sh --dev",
        "build-dump": "composer dump-autoload --working-dir build --classmap-authoritative"
    },
    "prefer-stable": false,
    "config": {
        "prepend-autoloader": true,
        "autoloader-suffix": "",
        "allow-plugins": {
            "roots\/wordpress-core-installer": true,
            "dealerdirect\/phpcodesniffer-composer-installer": true,
            "bamarni\/composer-bin-plugin": true
        }
    }
}